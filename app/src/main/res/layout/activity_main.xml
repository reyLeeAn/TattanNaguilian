<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:scaleType="centerCrop"
            android:alpha="0.7"
            app:srcCompat="@drawable/municipality"/>

        <ImageView
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:scaleType="centerCrop"
            android:alpha="0.7"
            app:srcCompat="@drawable/falls"/>

        <ImageView
            android:id="@+id/bg3"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:scaleType="centerCrop"
            android:alpha="0.7"
            app:srcCompat="@drawable/church"/>

        <ImageView
            android:id="@+id/titleLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="-650dp"
            app:srcCompat="@drawable/lagonst"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Municipality of Naguilian, La Union\n Home of Basi"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/getstartedButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:padding="0dp"
            android:backgroundTint="@color/whitegreen"
            android:layout_gravity="center"
            android:layout_marginTop="230dp"
            android:text="Get Started"
            android:textColor="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>